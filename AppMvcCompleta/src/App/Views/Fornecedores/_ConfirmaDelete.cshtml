@model App.ViewModels.FornecedorViewModel
@{
    ViewData["Title"] = "Remover fornecedor";
}

<!--Criando o modal para o endereço-->
<div class="modal-header small">
    <h4 class="modal-title">@ViewData["Title"]</h4>
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">×</span><span class="sr-only">Fechar</span>
    </button>
</div>

<div class="modal-body">


    <input type="hidden" asp-for="Endereco.FornecedorId" />
    <div>
        <h4>Esta ação será permanente!</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-10">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Documento)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Documento)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Ativo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ativo)
            </dd>
        </dl>

        <form asp-action="Delete">

            <div class="modal-footer">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Excluir" class="btn btn-danger" />

                <input type="button" class="btn btn-info" value="Cancelar" data-dismiss="modal" />

            </div>
        </form>
    </div>

</div>


