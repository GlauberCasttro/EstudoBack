@using App.Extensions
@model IEnumerable<App.ViewModels.FornecedorViewModel>

@{
    ViewData["Title"] = "Lista de Fornecedores";
}

<h1>@ViewData["Title"]</h1>

<p supress-by-claim-name="Fornecedor" supress-by-claim-value="Adicionar">
    <a class="btn btn-info" asp-action="Create">Novo Fornecedor</a>
</p>

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Documento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @this.FormataDocumento(item.TipoFornecedor, item.Documento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ativo)
                </td>
                <td class="text-right">
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id"><spam class="fa fa-search"></spam></a>
                    <a class="btn btn-warning" supress-by-claim-name="Fornecedor" supress-by-claim-value="Editar" asp-action="Edit" asp-route-id="@item.Id"><spam class="fa fa-pencil-alt"></spam></a>
                    <a class="btn btn-danger" supress-by-claim-name="Fornecedor" supress-by-claim-value="Excluir" asp-action="Delete" asp-route-id="@item.Id" data-modal=""><spam class="fa fa-trash"></spam></a>

                </td>
            </tr>

        }
    </tbody>
</table>
<div id="myModalDelete" class="modal fade in">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id="myModalContentDelete"></div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            $(function () {
                $.ajaxSetup({ cache: false });

                $("a[data-modal]").on("click",
                    function (e) {
                        $('#myModalContentDelete').load(this.href,
                            function () {
                                $('#myModalDelete').modal({
                                    keyboard: true
                                },
                                    'show');
                            });
                        return false;
                    });
            });
        });
    </script>

}
